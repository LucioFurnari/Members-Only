<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../public/stylesheet/main.css">
  <title>Sign Up</title>
</head>
<body>
  <%- include('header', { user: user }) %>
  <section class="main">
  <form class="user-form" action="/sign-up" method="POST">
    <fieldset class="floating-label">
      <input type="text" name="name" id="name" placeholder="" value=<% if (errors.length > 0) { %> <%= inputs.name %> <% } %>>
      <label for="name">Name</label>
    </fieldset>
    <fieldset class="floating-label">
      <input type="text" name="lastName" id="lastName" placeholder="" value=<% if (errors.length > 0) { %> <%= inputs.lastName %> <% } %>>
      <label for="lastName">Last name</label>
    </fieldset>
    <fieldset class="floating-label">
      <input type="email" name="email" id="email" placeholder="" value=<% if (errors.length > 0) { %> <%= inputs.email %> <% } %>>
      <label for="email">Email</label>
    </fieldset>
    <fieldset class="floating-label">
      <input type="password" name="password" id="password" placeholder="" value=<% if (errors.length > 0) { %> <%= inputs.password %> <% } %>>
      <label for="password">Password</label>
    </fieldset>
    <fieldset class="floating-label">
      <input type="password" name="confirm_password" id="confirm_password" placeholder="" value=<% if (errors.length > 0) { %> <%= inputs.confirm_password %> <% } %>> 
      <label for="confirm_password">Confirm password</label>
    </fieldset>
    <button type="submit">Submit</button>
  </form>
  <% if (errors.length > 0) { %>
    <% errors.forEach(element => { %>
      <p><%=element.msg %></p>
    <% }); %>
  <% } %>
</section>
</body>
</html>