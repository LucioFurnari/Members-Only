<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../public/stylesheet/main.css">
  <link rel="icon" type="text/x-icon" href="../public/images/favicon.ico">
  <title>Log in</title>
</head>
<body>
  <%- include('header', { user: user }) %>
  <section class="main">
  <h1>Log in</h1>
  <form class="user-form" action="/log-in" method="POST">
    <fieldset class="floating-label">
      <input type="text" name="username" placeholder="" id="email">
      <label for="email">Email</label>
    </fieldset>
    <% if (locals.clientSideErrors) { %>
      <% for(let i=0; i < clientSideErrors.length; i++) { %>
        <% if (clientSideErrors[i].path === 'username' ) { %>
          <p> <%= clientSideErrors[i].msg %> </p>
        <% } %>
      <% } %>
    <% } %>
    <fieldset class="floating-label">
      <input type="password" name="password" id="password" placeholder="" >
      <label for="password">Password</label>
    </fieldset>
    <% if (locals.clientSideErrors) { %>
      <% for(let i=0; i < clientSideErrors.length; i++) { %>
        <% if (clientSideErrors[i].path === 'password' ) { %>
          <p> <%= clientSideErrors[i].msg %> </p>
        <% } %>
      <% } %>
    <% } %>
    <% if (errorMessages) { %>
      <p><%= errorMessages[errorMessages.length-1] %></p>
    <% } %>
    <button type="submit">Log in</button>
  </form>
</section>
<%- include('footer') %>
</body>
</html>